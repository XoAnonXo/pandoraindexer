FROM node:20-alpine

WORKDIR /app

# Копировать package.json
COPY package.json package-lock.json ./

# Убрать --production чтобы установить devDependencies (tsx)
RUN npm ci

# Копировать tsconfig и scripts
COPY tsconfig.json ./
COPY scripts/ ./scripts/

# Для отладки добавить логи
CMD ["sh", "-c", "echo 'Starting recalculation...' && npm run recalculate:volume24h && echo 'Done!'"]