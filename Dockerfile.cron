FROM node:20-alpine

WORKDIR /app

# Копировать все что нужно
COPY package.json package-lock.json ./
RUN npm ci --production

# Копировать tsconfig и scripts
COPY tsconfig.json ./
COPY scripts/ ./scripts/

# Для отладки добавить логи
CMD ["sh", "-c", "echo 'Starting recalculation...' && npm run recalculate:volume24h && echo 'Done!'"]